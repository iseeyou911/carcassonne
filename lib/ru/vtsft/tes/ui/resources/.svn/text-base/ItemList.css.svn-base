

.itemlist {
    width: 100%;
    min-width: 450px;
    list-style: none;
    padding: 0;
    margin: 0;
}

.itemlist-name {
    text-align: left;
    color: #888;
    font-size: 30px;
    font-weight: normal;
    text-shadow: 0 1px #ddd
}

.itemlist-item {
    margin: 20px 0 20px 0 ;
    border-bottom: 1px solid #dfdfdf;
    padding: 20px 0 30px 0 ;
}

.itemlist-item-name {
    margin: 0;
    float: left;
    width: 20%;
    min-width: 100px;
    overflow-x: hidden;
    text-align: left;
}

.itemlist-item-content {
    float: left;
    width: 70%;
    margin-left: 20px;
    line-height: 20px;
    min-width: 300px;
}

.itemlist-subitems-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

 .itemlist-subitem {
    margin-bottom: 10px;
}

.itemlist-item-note {
    font-size: 12px;
    color: #666;
}